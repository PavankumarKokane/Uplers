<div class="main-product">
  <nav>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16 items-center">
        <div class="flex items-center flex-wrap gap-4">
          <a href="/collections/all" class="text-sm text-gray-600">All</a>
          <span class="text-gray-300">/</span>
          {% if product %}
            {% for collection in product.collections %}
              <a href="{{ collection.url }}" class="text-sm text-gray-600">{{ collection.title }}</a>
              {% if forloop.last == false %}
                <span class="text-gray-300">/</span>
              {% endif %}
            {% endfor %}
            <span class="text-gray-300">/</span>
            <a href="{{ product.url }}" class="font-medium text-sm text-gray-600">{{ product.title }}</a>
          {% endif %}
        </div>
      </div>
    </div>
  </nav>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 pb-24">
      <div class="flex flex-col gap-4">
        <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden">
          {% for images in product.images limit: 1 %}
            <img
              loading="eager"
              id="mainImage"
              src="{{ images.src | img_url: 'master' }}"
              alt="{{ product.title | append: forloop.index }}"
              width="680"
              height="680"
              class="w-full h-full object-cover"
            >
          {% endfor %}
        </div>

        <div class="grid grid-cols-4 gap-4">
          {% for images in product.images %}
            <div class="thumbnail-btn aspect-square bg-gray-100 rounded-lg overflow-hidden {%- if forloop.index == 1 -%}{{ " ring-2 ring-indigo-600" }}{%- endif -%}">
              <img
                loading="lazy"
                src="{{ images.src | img_url: 'master' }}"
                alt="{{ product.title | append: forloop.index }}"
                width="680"
                height="680"
                class="w-full h-full object-cover"
              >
            </div>
          {% endfor %}
        </div>
      </div>
      <div class="flex flex-col gap-6">
        <h1 class="text-3xl font-bold">{{ product.title }}</h1>
        <div class="flex items-center gap-1">
          <div class="flex">
            <svg class="w-5 h-5 text-indigo-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            <svg class="w-5 h-5 text-indigo-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            <svg class="w-5 h-5 text-indigo-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            <svg class="w-5 h-5 text-indigo-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
